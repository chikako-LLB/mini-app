  <div class="row">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-content">
          <%= post.text %>
        </div>

        <div class="card-action">
          <% if controller_name != 'posts' || action_name != 'show' %>
            <%= link_to 'Show', post, class: "pink-text text-lighten-2" %>
          <% end%>
          <% if current_user == post.user %>
            <%= link_to 'Edit', edit_post_path(post), class: "pink-text text-lighten-2"  %>
            <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "pink-text text-lighten-2"  %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
